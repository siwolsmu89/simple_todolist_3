<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ms.kwon.simple.todolist.mapper.TodoMapper">
    <select id="getTodolist" resultType="Todo">
        SELECT id, text, colorValue, isChecked
        FROM todos
        ORDER BY id DESC
    </select>
    <select id="getTest" resultType="java.lang.String">
        SELECT '1'
        FROM dual
    </select>
    <insert id="addTodo" parameterType="Todo">
        INSERT INTO todos
            (id, text, colorValue, isChecked)
        VALUES
            (#{id}, #{text}, #{colorValue}, #{isChecked})
    </insert>
    <update id="checkTodo" parameterType="Todo">
        UPDATE todos
        SET
            isChecked = #{isChecked}
        WHERE
            id = #{id}
    </update>
    <delete id="deleteTodo" parameterType="Todo">
        DELETE FROM todos
        WHERE id = #{id}
    </delete>
</mapper>
